@model IEnumerable<api_aspnetcore_iroxit.Entities.Productos>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal_NuevoProducto">Agregar un producto</button>
</p>




<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="Modal_NuevoProducto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Nuevo Producto</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label id="Titulo" class="control-label">Titulo</label>
                                <input for="Titulo" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label id="Titulo" class="control-label">Descripcion</label>
                                <textarea class="form-control" aria-label="With textarea"></textarea>
                            </div>
                            <div class="row col-lg-12">
                                <div class="form-group col-md-6">
                                    <label id="PrecioUnitario" class="control-label">Precio</label>
                                    <input for="PrecioUnitario" class="form-control" type="number" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label id="Existencias" class="control-label">Existencias</label>
                                    <input for="Existencias" class="form-control" type="number"  />
                                </div>
                            </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>
